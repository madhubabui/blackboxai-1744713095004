<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tab Text Appearance -->
    <style name="TextAppearance.App.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Tab</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
    </style>

    <!-- Tab Item Style -->
    <style name="Widget.App.TabItem" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
